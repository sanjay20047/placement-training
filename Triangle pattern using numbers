import java.util.*;
class main{
    public static void main(String args[]){
        int row=4;
        int col=4;
        int count=0;
        for(int i=0;i<=row;i++){
            for(int j=0;j<i;j++){
                System.out.print(count+" ");
                count++;
                
            }
            System.out.println(" ");
        }
    }
}
